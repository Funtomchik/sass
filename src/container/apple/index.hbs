{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page">
	<div class="header">
		{{#with header}}
		<header class="header_content">
			<div class="header_block">
				<img src="/svg/apple.svg" alt="Apple" class="header_icon">
				<nav class="header_block">
					{{#each links}}
					<a href="{{url}}" class="header_link">{{text}}</a>
					{{/each}}
				</nav>
			</div>
			<div class="header_block">
				<img src="/svg/search.svg" alt="Search" class="header_icon">
				<img src="/svg/profile.svg" alt="Profile" class="header_icon">
			</div>
		</header>

		<div class="ad">
			{{#with ad}}
			<header class="ad_content">
				<div class="ad_block">
					<strong class="ad_title">{{title}}</strong>
				</div>
				<div class="link_block">
					{{#with link}}
					<a href="{{url}}" class="header_link">{{text}}</a>
					{{/with}}
				</div>
			</header>
			{{/with}}
		</div>
		{{/with}}
	</div>

	<div class="ad">
		{{#with ad}}
		<header class="ad_content">
			<div class="ad_block">
				<strong class="ad_title">{{title}}</strong>
			</div>
			<div class="link_block">
				{{#with link}}
				<a href="{{url}}" class="header_link">{{text}}</a>
				{{/with}}
			</div>
		</header>
		{{/with}}
	</div>

	{{#with iphone_pro}}
	<section class="product product-big product-iphone-pro product-dark product-top">
		<div class="product_content">
			<h1 class="product_title">{{title}}</h1>
			<p class="product_description">{{descriptions}}</p>
			<div class="product_action">
				{{#with link}}
				{{#each text}}
				<a href="{{../link}}" class="product_link">{{this}}</a>
				{{/each}}
				{{/with}}
			</div>
		</div>
	</section>
	{{/with}}

	{{#with iphone}}
	<section class="product product-big product-iphone product-light product-top">
		<div class="product_content">
			<h1 class="product_title">{{title}}</h1>
			<p class="product_description">{{descriptions}}</p>
			<div class="product_action">
				{{#with link}}
				{{#each text}}
				<a href="{{../link}}" class="product_link">{{this}}</a>
				{{/each}}
				{{/with}}
			</div>
		</div>
	</section>
	{{/with}}

	<div class="section_double">
		<div>
			{{#with trade_in}}
			<section class="product product-small product-trade-in product-light product-top">
				<div class="product_content">
					<h1 class="product_title">{{title}}</h1>
					<p class="product_description">{{descriptions}}</p>
					<div class="product_action">
						{{#with link}}
						<a href="{{link}}" class="product_link">{{text}}</a>
						{{/with}}
					</div>
				</div>
			</section>
			{{/with}}
		</div>
		<div>
			{{#with conference}}
			<section class="product product-small product-conference product-dark product-bottom">
				<div class="product_content">
					<h1 class="product_title">{{title}}</h1>
					<p class="product_description">{{descriptions}}</p>
					<div class="product_action">
						{{#with link}}
						<a href="{{link}}" class="product_link">{{text}}</a>
						{{/with}}
					</div>
				</div>
			</section>
			{{/with}}
		</div>
	</div>
</div>

